{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "DeepSeek Debug",
      // 改为调试整个应用（关键修改）
      "program": "${workspaceFolder}/src/main.js", 
      "runtimeArgs": ["--experimental-vm-modules"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // 添加Vue调试环境变量
      "env": {
        "NODE_ENV": "development",
        "VUE_APP_DEBUG": "true"
      }
    }
  ]
}